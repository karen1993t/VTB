<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_communication"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="15.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="198.5dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="24dp"
        android:lineSpacingExtra="5sp"
        android:text="@string/title_communication"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="p" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="149.5dp"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:contentDescription="@string/icon_close"
        android:src="@drawable/icon_close_vtb_card_steps"
        app:layout_constraintBottom_toBottomOf="@+id/title_communication"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_communication"
        app:layout_constraintTop_toTopOf="@+id/title_communication" />

    <TextView
        android:id="@+id/text_info_communication"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="18dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/text_info_communication"
        android:textColor="@color/grey"
        android:textFontWeight="400"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_communication"
        tools:targetApi="p" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_obtaining_the_statement"
        style="@style/country_style"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="14.5dp"
        android:hint="@string/et_hint_obtaining_the_statement"
        android:textColorHint="@color/black"
        app:boxStrokeErrorColor="@color/design_default_color_error"
        app:endIconMode="custom"
        app:errorTextColor="@color/design_default_color_error"
        app:hintTextColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_info_communication">

        <AutoCompleteTextView
            android:id="@+id/edit_obtaining_the_statement"
            style="@style/country_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_vertical"
            android:inputType="none"
            android:lineSpacingExtra="4sp"
            android:popupTheme="@style/country_style"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:ignore="LabelFor"
            tools:targetApi="p" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_communication_with_the_bank"
        style="@style/country_style"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="14.5dp"
        android:hint="@string/et_hint_communication_with_the_bank"
        android:textColorHint="@color/black"
        app:boxStrokeErrorColor="@color/design_default_color_error"
        app:endIconMode="custom"
        app:errorTextColor="@color/design_default_color_error"
        app:hintTextColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_obtaining_the_statement">

        <AutoCompleteTextView
            android:id="@+id/edit_communication_with_the_bank"
            style="@style/country_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_vertical"
            android:inputType="none"
            android:lineSpacingExtra="4sp"
            android:popupTheme="@style/country_style"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:ignore="LabelFor"
            tools:targetApi="p" />

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/checkBox_privacy_policy"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="13dp"
        android:button="@drawable/check_box_selector"
        android:drawablePadding="12dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_horizontal|center_vertical"
        android:padding="12dp"
        android:theme="@style/MyCheckBox"
        app:layout_constraintBottom_toTopOf="@id/btn_go_to_checked_personal_information"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_privacy_policy"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="27dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="14.4dp"
        android:lineSpacingExtra="3sp"
        android:text="@string/text_privacy_policy"
        android:textFontWeight="400"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/btn_go_to_checked_personal_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/checkBox_privacy_policy"
        tools:targetApi="p" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_go_to_checked_personal_information"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="15sp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/button_next"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical|center_horizontal"
        android:lineSpacingExtra="5sp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="p" />

</androidx.constraintlayout.widget.ConstraintLayout>