<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fragments_about">
    <ImageView
        android:layout_width="57dp"
        android:layout_height="21dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="24.34dp"
        android:src="@drawable/ic_logo_vtb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/logo_vtb" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_logo_master"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="14dp"
        android:contentDescription="@string/logo_vtb" />
    <TextView
        android:id="@+id/subhead"
        android:layout_width="289dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/subhead"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/gotham_pro"
        android:textFontWeight="700"
        android:lineHeight="30dp"
        android:lineSpacingExtra="6sp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="p" />
    <TextView
        android:id="@+id/amd_usd_eur"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal|top"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/gotham_pro"
        android:textFontWeight="400"
        android:alpha="0.5"
        android:textColor="#FFFFFF"
        android:layout_marginTop="121dp"
        android:text="@string/amd_usd_eur"
        android:textSize="15sp"
        android:lineSpacingExtra="4sp"
        android:translationY="-1.82sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="p" />
    <ImageView
        android:id="@+id/img_amd_usd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_amd_usd_eur"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/amd_usd_eur"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/icon_about" />





</androidx.constraintlayout.widget.ConstraintLayout>