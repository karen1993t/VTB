<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_mobile_phone_number"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="15.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="136.5dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="24dp"
        android:lineSpacingExtra="5sp"
        android:text="@string/title_mobile_phone_number"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="p" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="10.34dp"
        android:layout_height="10.34dp"
        android:layout_marginStart="87.5dp"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:contentDescription="@string/icon_close"
        android:src="@drawable/ic_close_vtb_card_steps"
        app:layout_constraintBottom_toBottomOf="@id/title_mobile_phone_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/title_mobile_phone_number"
        app:layout_constraintTop_toTopOf="@id/title_mobile_phone_number" />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="18dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/text_info_mobile_phone_number"
        android:textColor="@color/grey"
        android:textFontWeight="400"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_mobile_phone_number"
        tools:targetApi="p" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_mobile_number"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="33.5dp"
        android:hint="@string/et_hint_phone_number"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/background_mail"
        app:endIconDrawable="@drawable/ic_next_grey"
        app:endIconMode="custom"
        app:hintTextColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_info">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_user_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:digits="+()1234567890-"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:lineSpacingExtra="4sp"
            android:maxLength="17"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:targetApi="p" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_go_to_legal_address_fragment"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="15sp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/button_next"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical|center_horizontal"
        android:lineSpacingExtra="5sp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="p" />


</androidx.constraintlayout.widget.ConstraintLayout>