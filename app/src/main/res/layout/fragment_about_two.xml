<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragments_about">

    <TextView
        android:id="@+id/subhead"
        android:layout_width="289dp"
        android:layout_height="121dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:lineSpacingExtra="6sp"
        android:text="@string/subhead_1"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textFontWeight="700"
        android:lineHeight="30dp"
        android:fontFamily="@font/gotham_pro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:targetApi="p" />

    <ImageView
        android:id="@+id/gravity_sce"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/icon_phones"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subhead"
        android:contentDescription="@string/gravity_sce" />

    <ImageView
        android:layout_width="57dp"
        android:layout_height="21dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="24.34dp"
        android:src="@drawable/ic_logo_vtb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/logo_vtb" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_logo_master"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="14dp"
        android:contentDescription="@string/logo_vtb" />

</androidx.constraintlayout.widget.ConstraintLayout>