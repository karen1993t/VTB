<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_legal_address"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="15.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="214.5dp"
        android:fontFamily="@font/gotham_pro"
        android:lineHeight="24dp"
        android:lineSpacingExtra="5sp"
        android:text="@string/title_legal_address"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="p" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="10.34dp"
        android:layout_height="10.34dp"
        android:layout_marginStart="165.5dp"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:contentDescription="@string/icon_close"
        android:src="@drawable/ic_close_vtb_card_steps"
        app:layout_constraintBottom_toBottomOf="@id/title_legal_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/title_legal_address"
        app:layout_constraintTop_toTopOf="@id/title_legal_address" />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical"
        android:lineHeight="18dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/text_info_legal_address"
        android:textColor="@color/grey"
        android:textFontWeight="400"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_legal_address"
        tools:targetApi="p" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_country"
        style="@style/country_style"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        android:hint="@string/text_et_country"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_info">

        <AutoCompleteTextView
            android:id="@+id/autoComplete_user_country"
            style="@style/country_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4sp"
            android:popupTheme="@style/country_style"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:ignore="LabelFor"
            tools:targetApi="p" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_city"
        style="@style/country_style"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="14.5dp"
        android:hint="@string/text_et_city"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_country">

        <AutoCompleteTextView
            android:id="@+id/autoComplete_user_city"
            style="@style/country_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4sp"
            android:popupTheme="@style/country_style"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:ignore="LabelFor"
            tools:targetApi="p" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_street"
        style="@style/country_style"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="14.5dp"
        android:hint="@string/text_et_street_name"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_city">

        <AutoCompleteTextView
            android:id="@+id/autoComplete_user_street"
            style="@style/country_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4sp"
            android:popupTheme="@style/country_style"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:ignore="LabelFor"
            tools:targetApi="p" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_house_number"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.5dp"
        android:hint="@string/ed_hint_text_house_number"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/grey"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/grey"
        app:layout_constraintEnd_toEndOf="@id/text_input_layout_street"
        app:layout_constraintStart_toStartOf="@id/text_input_layout_street"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_street">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_user_house_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:targetApi="p" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_apartment"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.5dp"
        android:hint="@string/ed_hint_text_apartment"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/grey"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/text_input_layout_house_number"
        app:layout_constraintStart_toStartOf="@+id/text_input_layout_house_number"
        app:layout_constraintTop_toBottomOf="@+id/text_input_layout_house_number">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_user_apartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:targetApi="p" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_go_to_identity_verification_fragment"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="15sp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/button_next"
        android:fontFamily="@font/gotham_pro"
        android:gravity="center_vertical|center_horizontal"
        android:lineSpacingExtra="5sp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="p" />

</androidx.constraintlayout.widget.ConstraintLayout>