<resources>
    <!-- Base application theme. -->
    <style name="Theme.VtbProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->


        <item name="android:statusBarColor">#8E2126</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/action_bar</item>
    </style>

    <style name="title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8E2126</item>
    </style>

    <style name="action_bar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="background">@drawable/background_action_bar</item>
    </style>

    <style name="action_bar_white" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/black</item>
        <item name="tabIndicatorHeight">0.5dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
    </style>

    <style name="edit_text_user_information_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/grey</item>
    </style>

    <style name="country_style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/grey</item>
        <item name="backgroundTint">@color/white</item>
        <item name="mock_labelBackgroundColor">@color/black</item>
        <item name="selectableItemBackground">@color/white</item>
        <item name="selectableItemBackgroundBorderless">@color/white</item>
        <item name="boxStrokeColor">@color/background_mail</item>
        <item name="fontFamily">@font/gotham_pro</item>
        <item name="endIconDrawable">@drawable/ic_next_grey</item>
    </style>

    <style name="themeAuth" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">

    </style>

</resources>